content-type: application/json
token: {{token1}}

{
  "position" : {
    "lat": 14.441555,
    "lon": 75.922259
  }
}

###

# @name getGoHomeLocation
GET {{driver-offer-bpp-host}}/ui/driver/goHomeFeature/get
token: {{token1}}

###

@homeLocId = {{getGoHomeLocation.response.body.locations[0].id}}

# @name activateGoHomeLocation
POST {{driver-offer-bpp-host}}/ui/driver/goHomeFeature/activate
  ?homeLocationId={{homeLocId}}
token: {{token1}}

