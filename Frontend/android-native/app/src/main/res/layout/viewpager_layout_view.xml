<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:elevation="1dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/indicatorLayout">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/indicator1"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/indicatorText1"
                            android:textSize="20dp"
                            android:lineHeight="28dp"
                            android:textColor="@color/Black800"
                            android:fontFamily="@font/plus_jakartasans_semibold"
                            android:text="₹120"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:trackColor="@color/grey900"
                            android:theme="@style/MaterialTheme"
                            app:trackCornerRadius="20dp"
                            app:indicatorColor="@color/green900"
                            app:trackThickness="7dp"
                            android:id="@+id/progress_indicator_1"
                            android:progress="100"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="5dp"
                            android:indeterminate="false"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E5E7EB"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/indicator2"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/indicatorText2"
                            android:textSize="20dp"
                            android:lineHeight="28dp"
                            android:textColor="@color/Black800"
                            android:fontFamily="@font/plus_jakartasans_semibold"
                            android:text="₹40"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:trackColor="@color/grey900"
                            android:theme="@style/MaterialTheme"
                            app:trackCornerRadius="20dp"
                            app:indicatorColor="@color/green900"
                            app:trackThickness="7dp"
                            android:id="@+id/progress_indicator_2"
                            android:progress="100"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="5dp"
                            android:indeterminate="false"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E5E7EB"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:id="@+id/indicator3"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/indicatorText3"
                            android:textSize="20dp"
                            android:lineHeight="28dp"
                            android:textColor="@color/Black800"
                            android:fontFamily="@font/plus_jakartasans_semibold"
                            android:text="₹160"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:trackColor="@color/grey900"
                            android:theme="@style/MaterialTheme"
                            app:trackCornerRadius="20dp"
                            app:indicatorColor="@color/green900"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="5dp"
                            app:trackThickness="7dp"
                            android:id="@+id/progress_indicator_3"
                            android:progress="100"
                            android:indeterminate="false"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_marginTop="16dp"
            android:id="@+id/view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C2F3A"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/merchantLogo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/plus_jakartasans_medium"
                android:text="namma yatri"
                android:textColor="#FFFFFF"
                android:textFontWeight="800"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>